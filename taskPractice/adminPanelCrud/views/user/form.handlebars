{{!-- jquery validation and ajax call --}}
    <script>
      $(document).ready(function() {
        $("#formid").validate({
          rules: {
             fname: 'required',
           lname: 'required',
           address: {
             required: true,
             minlength: 10,
             maxlength:50
           },
           gender: {
             required: true
           },
           hobby: 'required',
           interestarea: 'required',
         },
         messages: {
           fname: 'First Name is required',
           lname: 'Last Name is required',
           address: {
             lname: 'Last Name is required',
             minlength: 'Address must be at least 10 characters long',
             maxlength: 'Address must be maximum 50 characters long'
           },
           gender: 'Gender field is required',
           hobby: 'Hobby field is required',
           interestarea: 'This field is required',
          },
          submitHandler: function(form, event) {
            event.preventDefault();
            var hobbyArray =[];
            $("#formid input:checkbox:checked").each(function(){
                hobbyArray.push($(this).val()); 
            });
            var formData = new FormData();
            formData.append('image', $('#image')[0].files[0]);

            formData.append('fname', $("#fname").val());
            formData.append('lname', $("#lname").val());
            formData.append('address', $("#address").val());
            formData.append('gender', $("#gender").val());
            formData.append('hobby', hobbyArray);
            formData.append('interestarea', $("#interestarea").val());
            formData.append('image', $('#image')[0].files[0].name);

          // ajax call 
              $.ajax({
                  type: "POST",
                  url: "/userForm",
                  data: formData,
                  processData: false,
                  contentType: false
              }).done(function(data){
                  console.log("data is : ", data); 
              })
          }
        });
      });
    </script>   
