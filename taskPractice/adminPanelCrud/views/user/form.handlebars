  <body>
    <br />
    <div class="container">
      <form id="formid" method="POST" enctype="multipart/form-data">
        <div class="card card-success">
          <div class="card-header">
            <h3 class="card-title">User Form</h3>
          </div>
          <p style="background-color: green; color: white;">{{msg}}</p>
          <div class="card-body">
            <div class="form-group">
              <label>First Name</label>

              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="far fa-square"
                    ></i></span>
                </div>
                <input
                  type="text"
                  name="fname"
                  id="fname"
                  class="form-control"
                  placeholder="Enter First Name"
                />
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <div class="form-group">
              <label>Last Name</label>

              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="far fa-square"
                    ></i></span>
                </div>
                <input
                  type="text"
                  name="lname"
                  id="lname"
                  class="form-control"
                  placeholder="Enter Last Name"
                />
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <!-- phone mask -->
            <div class="form-group">
              <label>Address</label>

              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="fas fa-home"
                    ></i></span>
                </div>
                <textarea
                  name="address"
                  id="address"
                  class="form-control"
                  placeholder="Enter Your Address"
                ></textarea>
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <div class="form-group">
              <label>Gender</label>
              <div class="input-group">
                <span><input type="radio" name="gender" id="gender" value="male" />Male</span>
              </div>
              <div class="input-group">
                <span><input
                    type="radio"
                    name="gender"
                    id="gender"
                    value="female"
                  />Female</span>
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <div class="form-group">
              <label>Hobby</label>
              <div class="input-group">
                <span><input
                    type="checkbox"
                    name="hobby"
                    id="hobby"
                    value="singing"
                  />Singing</span>
              </div>
              <div class="input-group">
                <span><input
                    type="checkbox"
                    name="hobby"
                    id="hobby"
                    value="dancing"
                  />Dancing</span>
              </div>
              <div class="input-group">
                <span><input
                    type="checkbox"
                    name="hobby"
                    id="hobby"
                    value="swimming"
                  />Swimming</span>
              </div>
              <div class="input-group">
                <span><input
                    type="checkbox"
                    name="hobby"
                    id="hobby"
                    value="coding"
                  />Coding</span>
              </div>
              <div class="input-group">
                <span><input
                    type="checkbox"
                    name="hobby"
                    id="hobby"
                    value="other"
                  />Other</span>
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <div class="form-group">
              <label>Interest Area</label>

              <div class="input-group">

                <select
                  class="form-control select2bs4"
                  style="width: 100%;"
                  name="interestarea"
                  id="interestarea"
                >
                  <option value="Node Js">Node Js</option>
                  <option value="Java">Java</option>
                  <option value="Python">Python</option>
                  <option value="PHP">PHP</option>

                </select>
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->

            <div class="form-group">
              <label>Image</label>

              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="fas fa-square"
                    ></i></span>
                </div>
                <input
                  type="file"
                  name="image"
                  id="image"
                  class="form-control"
                />
              </div>
              <!-- /.input group -->
            </div>
            <!-- /.form group -->
            <input class="btn btn-success" type="submit" value="Add User" />
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </form>
    </div>
<div class="container">
    <table id="table">
  
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Action</th>
    </tr>
     {{#each user}}
    <tr>
      <td><img src="/uploads/{{image}}" style="width: 100px;" /></td>
      <td>{{fname}}</td>
      <td>{{address}}</td>
      <td>{{gender}}</td>
